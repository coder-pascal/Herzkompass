<Page x:Class="Herzkompass.LikePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Likes"
      Background="White"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar column -->
            <ColumnDefinition Width="*"/>
            <!-- Main content column -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Grid Background="#F4C2D7" Grid.Column="0" Margin="0,0,0,-1080">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Image Source="logo.png" Height="100" Width="100" Margin="10" HorizontalAlignment="Center"/>
                <TextBlock Text="Herzkompass" FontWeight="Bold" FontSize="24" Margin="0,20,0,40" HorizontalAlignment="Center" />

                <!-- Sidebar Buttons -->
                <Button Content="Startseite" FontSize="18" Margin="10" Width="220" HorizontalAlignment="Center" Click="Button_Click"/>
                <Button Content="Entdecken" FontSize="18" Margin="10" Width="220" HorizontalAlignment="Center" Click="Button_Click_1"/>
                <Button Content="Likes" FontSize="18" Margin="10" Width="220" HorizontalAlignment="Center" Click="Button_Click_2"/>
                <Button Content="Favoriten" FontSize="18" Margin="10" Width="220" HorizontalAlignment="Center" Click="Button_Click_3"/>
                <Button Content="Einstellungen" FontSize="18" Margin="10" Width="220" HorizontalAlignment="Center" Click="Button_Click_4"/>
                <Button Content="Hilfe" FontSize="18" Margin="10" Width="220" HorizontalAlignment="Center" Click="Button_Click_5"/>
                <Button Content="Ausloggen" FontSize="18" Margin="10" Width="220" HorizontalAlignment="Center" Click="Button_Click_6"/>
            </StackPanel>
        </Grid>

        <!-- Main Content Area for Liked Profiles -->
        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock Text="Likes" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,20"/>

            <!-- Profile Items Container -->
            <ItemsControl x:Name="LikedProfilesContainer" ItemsSource="{Binding LikedProfiles}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="150" Margin="10" HorizontalAlignment="Center">
                            <Border BorderBrush="Pink" BorderThickness="3" CornerRadius="10">
                                <Image Source="{Binding ProfileImagePath}" Width="150" Height="150" Stretch="UniformToFill"/>
                            </Border>
                            <TextBlock Text="{Binding Username}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBlock Text="{Binding Age}" FontSize="14" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Location}" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                            <!-- Buttons: Remove Like & Add to Favorites -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                <Button Content="🗑" FontSize="16" Width="30" Height="30" Margin="5"
                                        Tag="{Binding ProfileId}" Click="OnRemoveLikeClick" />
                                <Button Content="⭐" FontSize="16" Width="30" Height="30" Margin="5"
                                        Tag="{Binding ProfileId}" Click="OnAddToFavoritesClick" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Page>
